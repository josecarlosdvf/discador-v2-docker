# ========================================
# CONFIGURAÇÕES DO SISTEMA DISCADOR V2.0
# ========================================
# Copie este arquivo para .env e configure conforme necessário

# ==========================================
# CONFIGURAÇÕES DO BANCO DE DADOS (MariaDB)
# ==========================================
DB_HOST=database
DB_NAME=discador
DB_USER=discador_user
DB_PASSWORD=ALTERE_ESTA_SENHA_AGORA!
DB_ROOT_PASSWORD=ALTERE_A_SENHA_ROOT_AGORA!

# ===========================
# CONFIGURAÇÕES DO REDIS
# ===========================
REDIS_HOST=redis
REDIS_PASSWORD=ALTERE_A_SENHA_REDIS_AGORA!

# ===============================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===============================
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_NAME="Sistema Discador v2"

# =============================
# CONFIGURAÇÕES DO ASTERISK
# =============================
ASTERISK_HOST=asterisk
ASTERISK_MANAGER_USER=admin
ASTERISK_MANAGER_PASSWORD=ALTERE_A_SENHA_ASTERISK_AGORA!

# ===========================
# CONFIGURAÇÕES DE EMAIL
# ===========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# ===========================
# CONFIGURAÇÕES GERAIS
# ===========================
TZ=America/Sao_Paulo

# ========================
# CONFIGURAÇÕES DE LOG
# ========================
LOG_LEVEL=info
LOG_MAX_FILES=30

# ====================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ====================================
# Descomente para desenvolvimento
APP_ENV=development
APP_DEBUG=true
